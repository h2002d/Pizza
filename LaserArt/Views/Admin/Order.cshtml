@model List<LaserArt.Models.Order>

@{
    ViewBag.Title = "Order";
}

<h2>Պատվերներ</h2>

<div>
    <hr />
    <table class="table table-striped">
        <thead>
            <tr>
                <th>N</th>
                <th>Անուն</th>
                <th>Հեռախոսահամար </th>
                <th>Վճար. ձև</th>
                <th>Հասցե</th>
                <th>Ժամ</th>
                <th>Կարգավիճակ</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr id="@item.Id" @(item.Status==0 ? "style=background-color:yellow;":item.Status==1? "style=background-color:green;":item.Status==2?"style=background-color:gray;":"") >
                    <td  class="adminOrderRow">@item.Id</td>
                    <td  class="adminOrderRow">@item.Name @item.SurName</td>
                    <td class="adminOrderRow">@item.PhoneNumber</td>
                    <td class="adminOrderRow">@(item.isCash ? "Կանխիկ" : "Քարտով")</td>
                    <td  class="adminOrderRow">@item.city.Name ,@item.Address</td>
                    <td  class="adminOrderRow">@item.OrderDate.AddHours(11)</td>
                    <td>
                        <input type="radio" name="orderStatus_@item.Id" @(item.Status==0?"checked":"") value="0">Չավարտված
                        <input type="radio" name="orderStatus_@item.Id" @(item.Status==1?"checked":"") value="1">Առաքված
                        <input type="radio" name="orderStatus_@item.Id" @(item.Status==2?"checked":"") value="2">Փակված
                        <input type="button" class="orderSetStatus" value="Հաստատել" />
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

